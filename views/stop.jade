extends layout

block head
  script
    var stopID = !{stop}
    var agency = !{agency}
    
  script(src='js/stops.js')
  
block body
  div.container-fluid
    div.span6
      h4 Stop # 
        span.label.label-important #{stopID}
        &nbsp; | &nbsp;
        span#stopname
        &nbsp; | &nbsp;
        a(href='#{website}', target='_blank') #{name}
      div#area
      div#demographics.span5
        table.table.table-hover
          th Demographic Information
          th
          tr
            td Total population
            td#totpop
          tr
            td Weighted population
            td#weightedpop
          tr
            td Total area
            td#totarea
          tr 
            td Search radius area
            td#searcharea
          tr
            td Per Capita Income
            td#percapitaincome
          th Businesses
          th
          tr
            td Number of restaurants
            td#numrest
    div#employment-chart.span6
    div#age-chart.span6
    div#race-chart.span6
    div#income-chart.span6
    div#map-canvas.span6
    div.span6
        h4 Places to get food
        ul#restlist.unstyled
      
    
  
  script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js')
  script(src='https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false')
  script(src='//cdnjs.cloudflare.com/ajax/libs/highcharts/2.3.5/highcharts.js')
  
